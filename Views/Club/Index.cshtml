@model IEnumerable<BaseballUa.ViewModels.ClubViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Клуби:</h1>

<div class="row">
    @{
        foreach (var club in Model)
        {
           
            <div class="card text-white bg-primary mb-3" style="max-width: 50rem;">
                <div class="card-header">
                    <a asp-action="DetailsClub" asp-route-clubId="@club.Id">
                        <img src="~/images/club/logoSmall/@club.FnameLogoSmall" /> @club.Name
                    </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            Команда:
                        </div>
                        <div class="col">
                            Назва:
                        </div>
                        <div class="col">
                            Спорт:
                        </div>
                        <div class="col">
                        </div>
                    </div>
                    <hr>
                    @foreach (var team in club.Teams)
                    {
                        <div class="row m-1">
                            <div class="col">
                                <img src="~/images/team/logoSmall/@team.FnameLogoSmall" />
                            </div>
                            <div class="col">
                                @team.Name
                            </div>
                            <div class="col">
                                @team.SportType
                            </div>
                            <div class="col">
                                <a class="text-white" asp-action="DetailsTeam" asp-route-teamId="@team.Id">Детальніше</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>