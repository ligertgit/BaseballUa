                            <div class="col">
                                @(game.VisitorTeam?.Name ?? "???")
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>*@
    }
    
    @if (Model.Players != null && Model.Players.Count > 0)
    {
        <div id="players" class="container-fluid bg-primary pt-3 pb-5">
            <div class="row m-5 mt-0 mb-0 pt-2">
                <div class="col">
                    <h4 class="text-light">
                        Гравці:
                    </h4>
                </div>
            </div>
            <hr />
            <div class="d-flex flex-row flex-wrap p-2 m-0">
                @foreach(var player in Model.Players)
                {
                    <div class="bg-warning me-2 mb-2 rounded-2 p-1 text-primary">
                        <div>
                            <img src="~/images/player/avatarBig/@(player.AvatarBig ?? Constants.DefaultPlayerBigImage)" />
                        </div>
                        <div class="p-2 pt-0 pb-0">
                            <strong>@player.FirstName</strong>
                        </div>
                        <div class="p-2 pt-0 pb-0">
                            <strong>@player.SecondName</strong>
                        </div>
                        <div class="p-2 pt-0 pb-0">
                            <strong>@(player.Birthdate == null ? " " : ((DateTime)player.Birthdate).ToString("dd-MM-yy"))</strong>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
}


