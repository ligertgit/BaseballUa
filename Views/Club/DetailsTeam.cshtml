                            </div>
                            <div class="col">
                                <h4>@(game.RunsHome == null ? 0 : game.RunsHome) : @(game.RunsVisitor == null ? 0 : game.RunsVisitor)</h4>
                            </div>
                            <div class="col">
                                <img src="~/images/team/logoSmall/@(game.VisitorTeam?.FnameLogoSmall ?? Constants.DefaultTeamSmallImage)" />
