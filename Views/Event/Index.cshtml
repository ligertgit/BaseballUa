<h1>Турніри за місяць</h1>
<div class="row">
    <div class="col-4">
    </div>
    <div class="col-1 bg-primary">
        @*<p class="text-right">Минулий</p>*@
        <a asp-action="Index" asp-route-monthShift="@Html.DisplayName((ViewBag.monthShift - 1).ToString())" class="text-white">Минулий</a>
        
    </div>
    <div class="col-2 bg-info">
        <p class="text-center">@DateTime.Now.AddMonths(ViewBag.monthShift).ToString("MMMM")</p>
    </div>
    <div class="col-1 bg-primary">
        @*<p class="text-left">Наступний</p>*@
        <a asp-action="Index" asp-route-monthShift="@Html.DisplayName((ViewBag.monthShift + 1).ToString())" class="text-white">Наступний</a>
    </div>
    <div class="col-4">
    </div>

</div>

<table class="table">
    <thead>
        <tr>
            <th>
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tournament.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tournament.Sport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tournament.CategoryShortName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{
                        if (item.EndDate < DateTime.Now)
                        {
                            <div class="bg-secondary">finished</div>
                        }    
                        else if (item.StartDate > DateTime.Now)
                        {
                            <div class="bg-info">upcoming</div>
                        }
                        else
                        {
                            <div class="bg-warning">runnig</div>
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tournament.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tournament.Sport)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tournament.CategoryShortName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    <a asp-action="DetailsEvent" asp-route-id="@item.EventViewModelId">Деталі</a>
                </td>
            </tr>
        }

    </tbody>
</table>
