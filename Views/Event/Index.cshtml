@model IEnumerable<BaseballUa.ViewModels.EventViewModel>

@{
    ViewData["Title"] = "Tournamets";
}

@{
    var startDate = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);
    var endDate = startDate.AddMonths(1);
    var eventsThisMonth = Model.Where(i => 
                            ((i.StartDate >= startDate && i.StartDate <= endDate)
                            || (i.EndDate >= startDate && i.EndDate <= endDate))
                            || (i.StartDate <= startDate && i.EndDate >= endDate)
                            ).OrderByDescending(i => i.StartDate).ToList();
}

<h1>Турніри за місяць</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tournament.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tournament.Sport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tournament.CategoryShortName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in eventsThisMonth)
        {
            <tr>
                <td>
                    @{
                        if (item.EndDate < DateTime.Now)
                        {
                            <div class="bg-secondary">finished</div>
                        }    
                        else if (item.StartDate > DateTime.Now)
                        {
                            <div class="bg-info">upcoming</div>
                        }
                        else
                        {
                            <div class="bg-warning">runnig</div>
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tournament.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tournament.Sport)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tournament.CategoryShortName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    <a asp-action="DetailsEvent" asp-route-id="@item.EventViewModelId">Деталі</a>
                </td>
            </tr>
        }
