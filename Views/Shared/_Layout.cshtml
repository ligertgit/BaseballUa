@*<body class="bg-primary bg-gradient bg-opacity-75">*@
<body class="bg-primary bg-gradient bg-opacity-75">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-warning border-bottom box-shadow mb-0">
            <div class="container-fluid">
                <a class="navbar-brand text-primary" asp-area="" asp-controller="Home" asp-action="Index">UA Ball</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-primary" asp-area="" asp-controller="Home" asp-action="Index">Головна</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-primary" asp-area="" asp-controller="Event" asp-action="Index">Турніри</a>
                        </li>
@*                        <li class="nav-item">
                            <a class="nav-link text-primary" asp-area="" asp-controller="Admin" asp-action="Index">Адмінка</a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link text-primary" asp-area="" asp-controller="Club" asp-action="Index">Клуби</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-primary" asp-area="" asp-controller="Calendar" asp-action="Index">Календар</a>
                        </li>
                        <li class="nav-item" style="margin-left: auto;">
                            @*<a class="nav-link text-primary" asp-area="" asp-controller="Calendar" asp-action="Index">Календар</a>*@
                        </li>
                        <partial name="_LoginPartial.cshtml" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    @*<div class="container-fluid m-0 p-0">*@
    <main role="main" class="pb-0">
        @RenderBody()
    </main>
    @*</div>*@



    <footer class="border-top footer text-muted bg-warning" style="line-height:25px">
        <div class="container-fluid bg-warning text-wrap">
            <label>&copy; 2023 - UA Ball.</label>
            <label>Присилайте ваші фото, відео, новини, побажання, скарги:</label>
            <label>ligert@gmail.com [viber, whatsapp: +380504422771]</label>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>*@
    <script src="~/js/site.js" asp-append-version="true"></script>

    @*<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>*@

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
