@model IEnumerable<BaseballUa.ViewModels.StaffViewModel>

@{
    ViewData["Title"] = "ListStaffs";
}

<div class="container-fluid text-warning adminhead">
    <div class="mb-0 mt-2 mb-5 p-0">
        @await Html.PartialAsync("_AdminHead")
    </div>
</div>

<h1>Список працівників клуба @ViewBag.club.Name</h1>

<p>
    <a class="btn btn-primary" asp-action="AddStaff" asp-route-clubId=@ViewBag.club.Id>Додати працівника</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirsName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvatarSmall)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClubId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirsName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleDescription)
            </td>
            <td>
                <img src="~/images/staff/avatarSmall/@item.AvatarSmall" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClubId)
            </td>
            <td>
                <div class="m-1">
                    <a class="btn btn-warning" asp-action="UpdateStaffAvatar" asp-route-staffId="@item.Id">Новий аватар</a>
                </div>
                <div class="m-1">
                    <a class="btn btn-danger" asp-action="DeleteStaff" asp-route-staffId="@item.Id">Видалити</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
