                <label>
                    Новини не пізніше: @ViewBag.lastDate
                </label>
            }
        </div>
        <div class="col-2">
            @if (ViewBag.lastId == null)
            {
                <label>ID не меньше:</label>
            }
            else
            {
                <label>
                    Новини не пізніше: @ViewBag.lastId
                </label>
            }
        </div>
    </div>
</div>
