@model IEnumerable<BaseballUa.ViewModels.TeamViewModel>

@{
    ViewData["Title"] = "List Event Teams";
}

<div class="container-fluid text-warning adminhead">
    <div class="mb-0 mt-2 mb-5 p-0">
        @await Html.PartialAsync("_AdminHead")
    </div>
</div>

<h1>Список команд турніру</h1>

@if(ViewBag.EventId > 0)
{
    <p>
        <a class="btn btn-primary" asp-action="AddEventTeam" asp-route-eventId="@ViewBag.EventId">Додати команду до турніру</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SportType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FnameLogoSmall)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsTemp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Club)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SportType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <img src="~/images/team/logoSmall/@item.FnameLogoSmall" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsTemp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Club.Name)
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="DeleteEventTeam" asp-route-teamId="@item.Id" asp-route-eventId="@ViewBag.EventId">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
   <label>Невідоме ID змагання</label> 
}
