@using BaseballUa.Data;
@model BaseballUa.ViewModels.StaffViewModel

@{
    ViewData["Title"] = "AddStaff";
}

<div class="container-fluid text-warning adminhead">
    <div class="mb-0 mt-2 mb-5 p-0">
        @await Html.PartialAsync("_AdminHead")
    </div>
</div>

<h1>Add Staff</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddStaff">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ClubId" value="@Model.ClubId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirsName" class="control-label"></label>
                <input asp-for="FirsName" class="form-control" />
                <span asp-validation-for="FirsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecondName" class="control-label"></label>
                <input asp-for="SecondName" class="form-control" />
                <span asp-validation-for="SecondName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                @Html.DropDownListFor(x => Model.Role, Enums.ClubRole.Admin.ToSelectList(), optionLabel: "--- оберіть ---")
                @*@Html.DropDownListFor(x => Model.Role, Enums.ClubRole.Admin.ToSelectList(), optionLabel: "--- оберіть ---", htmlAttributes: new { @class = "form-control"})*@
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleDescription" class="control-label"></label>
                <input asp-for="RoleDescription" class="form-control" />
                <span asp-validation-for="RoleDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvatarSmall" class="control-label"></label>
                <input asp-for="AvatarSmall" class="form-control" />
                <span asp-validation-for="AvatarSmall" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvatarLarge" class="control-label"></label>
                <input asp-for="AvatarLarge" class="form-control" />
                <span asp-validation-for="AvatarLarge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
