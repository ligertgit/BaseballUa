@model BaseballUa.ViewModels.EventViewModel

@{
    ViewData["Title"] = "Edit Event";
}

<div class="container-fluid text-warning adminhead">
    <div class="mb-0 mt-2 mb-5 p-0">
        @await Html.PartialAsync("_AdminHead")
    </div>
</div>

<h1>Редагування турніру</h1>

<hr />
<div class="row m-2">
    <form asp-action="EditEvent">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-4">
                <label asp-for="EventTeamsSL"></label>
                <div>
                    @Html.ListBoxFor(x => x.EventTeamsIds, Model.EventTeamsSL, new {size = 20})
                </div>
            </div>
            <div class="col-4">
                <input type="hidden" asp-for="EventViewModelId" />
                <div class="form-group">
                    <label asp-for="Year" class="control-label"></label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="m-1">
                    @Html.LabelFor(x => x.Tournament)
                    @Html.DropDownListFor(x => Model.TournamentId, new SelectList(Model.SelectTournament, "Value", "Text", Model.TournamentId))
                    @Html.ValidationMessageFor(x => x.TournamentId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group m-1">
                    <input type="submit" value="Зберегти" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="ListEvents">Повернутися до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
