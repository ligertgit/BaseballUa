@model BaseballUa.ViewModels.SchemaGroupViewModel

@{
    ViewData["Title"] = "Edit Group in Schema block";
}

<div class="container-fluid text-warning adminhead">
    <div class="mb-0 mt-2 mb-5 p-0">
        @await Html.PartialAsync("_AdminHead")
    </div>
</div>

<h1>Редагувати групу</h1>

<hr />

@if(Model != null)
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditSchemaGroup">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.EventSchemaItemId)
                @Html.HiddenFor(m => m.Id)
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="GroupName" class="control-label"></label>
                    <input asp-for="GroupName" class="form-control" />
                    <span asp-validation-for="GroupName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Прийняти" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="ListSchemaGroups" asp-route-EventSchemaItemId="@Model.EventSchemaItemId">Повернутися до схеми</a>
    </div>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
