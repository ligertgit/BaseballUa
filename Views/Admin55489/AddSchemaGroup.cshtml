@model BaseballUa.ViewModels.SchemaGroupViewModel

@{
    ViewData["Title"] = "Add Group in Schema block";
}

<div class="container-fluid text-warning adminhead">
    <div class="mb-0 mt-2 mb-5 p-0">
        @await Html.PartialAsync("_AdminHead")
    </div>
</div>

<h1>Додати групу до @Model.EventSchemaItem.SchemaItem</h1>

<hr />
<div class="row m-2">
    <div class="col-md-4">
        <form asp-action="AddSchemaGroup">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="EventSchemaItemId" value="@Model.EventSchemaItemId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GroupName" class="control-label"></label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>
            <div class="form-group m-1">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListSchemaGroups" asp-route-EventSchemaItemId="@Model.EventSchemaItemId">Повернутися до схеми</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
